$pane-title-color = #a5a5a5
$active-pane-title-color = #393939

.che-accordion
  .accordion-body, .accordion-title
    display block
    overflow hidden

  .accordion-title
    margin-top 20px
    margin-bottom 10px
    color $pane-title-color
    text-overflow ellipsis

    cursor pointer

    transform-origin left bottom
    transform scale3D(1.5, 1.5, 1)
    transition transform 0.5s

  .accordion-body
    transition all 0.5s
    transform translateZ(0)

.che-accordion.active
  .accordion-title
    color $active-pane-title-color

.che-accordion.closed
  .accordion-title
    transition transform 0.5s
    transform-origin left bottom
    transform scale3D(1, 1, 1)

    span
      transform-origin left bottom
      transform scale3D(1, 1, 1)
      transition transform 0.5s

  .accordion-body
    height 0
    transition all 0.5s
    transform translateZ(0)
